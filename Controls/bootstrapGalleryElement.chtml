              <div class="container">
                <img class="img-fluid" src="[#IMAGEPATH]" >
              </div>
              
            </div>
            <div class="modal-footer">
              [#IMAGECAPTION]
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
